<?php
namespace ITM\NginxPublishStreamEventBundle;

use ITM\NginxPublishStreamEventBundle\DependencyInjection\CompilerPass\ConfigurationCompilerPass;
use Symfony\Component\DependencyInjection\ContainerBuilder;
use Symfony\Component\HttpKernel\Bundle\Bundle;

class ITMNginxPublishStreamEventBundle extends Bundle
{
	public function build(ContainerBuilder $container)
	{
		parent::build($container);
		$container->addCompilerPass(new ConfigurationCompilerPass());
	}
}
